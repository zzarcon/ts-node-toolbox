{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es5",
      "scripthost",
      "es2015.collection",
      "es2015.symbol",
      "es2015.iterable",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "./custom-typings/typings.d.ts"
  ]
}